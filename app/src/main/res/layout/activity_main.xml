<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.steel.myapplication.MainActivity">

    <Button
        android:id="@+id/bCreateTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_table"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="6dp" />

    <Button
        android:id="@+id/bSelectTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_table"
        tools:layout_editor_absoluteX="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bCreateTable" />

    <Button
        android:id="@+id/bInsertItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insert_item"
        tools:layout_editor_absoluteX="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bSelectTable" />

    <Button
        android:id="@+id/bDeleteItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_item"
        tools:layout_editor_absoluteX="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bInsertItem" />

    <Button
        android:id="@+id/bDeleteTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_table"
        tools:layout_editor_absoluteX="2dp"
        android:layout_marginTop='8dp'
        app:layout_constraintTop_toBottomOf="@+id/bDeleteItem" />


</android.support.constraint.ConstraintLayout>
